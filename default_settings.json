{
  "settings":{
    "win_start_size": [580, 580],
    
    "motion_deadzone": 10,
    
    "double_click_time": 200,
    
    "show_cursor": false,
    "show_debug": true,
    
    "rear_color": [ 0.25, 0.25, 0.25, 1.0 ],
    
    "canvas_size": [ 512, 512 ],
    "canvas_color": [ 0.4, 0.4, 0.4, 1.0 ]
  },
  
  "bindings":[
    { "command": "toggle_debug", "keys": ["backquote"] },
    
    { "command": "canvas_draw", "keys": ["mouse_left"] },
    { "command": "canvas_clear", "keys": ["delete"] },
    
    { "command": "view_pan",   "keys": ["ctrl","mouse_middle"] },
    { "command": "view_rot",   "keys": ["mouse_middle"], "motion": "horizontal" },
    { "command": "view_zoom",  "keys": ["mouse_middle"], "motion": "vertical" },
    
    { "command": "color_pick", "keys": ["mouse_right"], "on": "release" },
    { "command": "brush_soften", "keys": ["mouse_right"], "motion": "horizontal" },
    { "command": "brush_resize", "keys": ["mouse_right"], "motion": "vertical" },
    
    { "command": "view_pan",   "keys": ["kp_enter","mouse_middle"] },
    { "command": "view_reset", "keys": ["kp_period"] },
    { "command": "view_flip",  "keys": ["kp_5"], "on": "release" },
    
    { "command": "canvas_draw", "keys": ["u"] },
    { "command": "view_reset", "keys": ["semicolon"] },
    { "command": "view_flip",  "keys": ["k"], "on": "release" },
    { "command": "canvas_clear", "keys": ["x"] },
    
    { "command": "view_pan",   "keys": ["quote"] },
    { "command": "view_rot",   "keys": ["comma"], "motion": "horizontal" },
    { "command": "view_zoom",  "keys": ["comma"], "motion": "vertical" },
    
    { "command": "color_pick", "keys": ["i"] },
    { "command": "brush_soften", "keys": ["i"], "motion": "horizontal" },
    { "command": "brush_resize", "keys": ["i"], "motion": "vertical" },

    { "command": "set_brush", "keys": ["kp_4"], "to": "draw" },
    { "command": "set_brush", "keys": ["kp_8"], "to": "blur" },
    { "command": "set_brush", "keys": ["kp_3"], "to": "smudge" },

    { "command": "swap_color", "keys": ["kp_1"], "on": "release" },
    { "command": "swap_color", "keys": ["q"], "on": "release" }
  ],
  
  "brush":{
    "size": 20.0,
    "softness": 1.0,
    "opacity": 1.0,
    "color": [ 0.9, 0.6, 0.8, 1.0 ],
    "color2": [ 0.1, 0.3, 0.4, 1.0 ],
    "mixamt": 0.0,
    "showcolor":false
  }
}
